<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@color/card_gray"
    tools:context="cn.edu.pku.eecs.start_time.TimeManagerDetail">

    <com.afollestad.cardsui.CardListView
        android:id="@+id/card_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/button_delete">
    </com.afollestad.cardsui.CardListView>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/action_delete"
        bootstrapbutton:bb_text_gravity="center"
        bootstrapbutton:bb_icon_right="fa-exclamation-triangle"
        bootstrapbutton:bb_icon_left="fa-exclamation-triangle"
        bootstrapbutton:bb_type="danger"
        android:layout_above="@+id/button_confirm"
        android:layout_marginBottom="8dp"
        android:id="@+id/button_delete" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/action_confirm_date"
        bootstrapbutton:bb_text_gravity="center"
        bootstrapbutton:bb_icon_right="fa-chevron-circle-left"
        bootstrapbutton:bb_icon_left="fa-chevron-circle-right"
        bootstrapbutton:bb_type="primary"
        android:layout_alignParentBottom="true"
        android:id="@+id/button_confirm" />

</RelativeLayout>
